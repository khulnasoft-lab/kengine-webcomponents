{
    "description": "KEngine Web Components",
    "author": "KHULNASOFT (https://www.khulnasoft.com)",
    "license": "Apache-2.0",
    "private": true,
    "keywords": [
      "kengine",
      "khulnasoft",
      "ui"
    ],
    "scripts": {
      "build": "npm-run-all --sequential build:prerequisitesWithLint build:bundles",
      "build:bundles": "npm-run-all --parallel bundle:main bundle:fiori",
      "build:prerequisitesWithLint": "npm-run-all build:base build:prerequisites prepare:main prepare:fiori lint:main lint:fiori",
      "build:prerequisites": "npm-run-all --parallel build:localization build:theming build:icons build:icons-business-suite build:icons-tnt",
      "build:localization": "yarn workspace @kengine/webcomponents-localization build",
      "build:base": "yarn workspace @kengine/webcomponents-base build",
      "build:theming": "yarn workspace @kengine/webcomponents-theming build",
      "build:icons": "yarn workspace @kengine/webcomponents-icons build",
      "build:icons-business-suite": "yarn workspace @kengine/webcomponents-icons-business-suite build",
      "build:icons-tnt": "yarn workspace @kengine/webcomponents-icons-tnt build",
      "build:main": "yarn workspace @kengine/webcomponents build",
      "build:fiori": "yarn workspace @kengine/webcomponents-fiori build",
      "lint:main": "yarn workspace @kengine/webcomponents lint",
      "lint:fiori": "yarn workspace @kengine/webcomponents-fiori lint",
      "lint:scope": "npm-run-all --parallel lint:scope:main lint:scope:fiori",
      "lint:scope:main": "yarn workspace @kengine/webcomponents nps scope.lint",
      "lint:scope:fiori": "yarn workspace @kengine/webcomponents-fiori nps scope.lint",
      "bundle:main": "yarn workspace @kengine/webcomponents nps build.bundle",
      "bundle:fiori": "yarn workspace @kengine/webcomponents-fiori nps build.bundle",
      "build:playground": "yarn build && yarn copy-css && yarn workspace @kengine/webcomponents-playground build",
      "clean": "wsrun --exclude-missing clean",
      "prepare:main": "yarn workspace @kengine/webcomponents nps prepare",
      "prepare:fiori": "yarn workspace @kengine/webcomponents-fiori nps prepare",
      "scopePrepare:main": "yarn workspace @kengine/webcomponents nps scope.prepare",
      "scopePrepare:fiori": "yarn workspace @kengine/webcomponents-fiori nps scope.prepare",
      "watch:base": "yarn workspace @kengine/webcomponents-base nps watch",
      "watch:localization": "yarn workspace @kengine/webcomponents-localization nps watch",
      "watch:main": "yarn workspace @kengine/webcomponents nps watch",
      "watch:fiori": "yarn workspace @kengine/webcomponents-fiori nps watch",
      "scopeWatch:main": "yarn workspace @kengine/webcomponents nps scope.watch",
      "scopeWatch:fiori": "yarn workspace @kengine/webcomponents-fiori nps scope.watch",
      "start": "npm-run-all --sequential build:base build:prerequisites prepare:main prepare:fiori copy-css start:all",
      "startWithScope": "npm-run-all --sequential build:prerequisitesWithScope copy-css scopeStart:all",
      "build:prerequisitesWithScope": "npm-run-all build:base build:prerequisites scopePrepare:main scopePrepare:fiori",
      "start:all": "npm-run-all --parallel watch:base watch:localization watch:main watch:fiori dev",
      "dev": "node packages/tools/lib/dev-server/dev-server.js",
      "scopeStart:all": "npm-run-all --parallel watch:base watch:localization scopeWatch:main scopeWatch:fiori dev",
      "start:playground": "yarn build:base && yarn build:prerequisites && yarn prepare:main && yarn prepare:fiori && yarn build:main && yarn build:fiori && yarn copy-css && yarn workspace @kengine/webcomponents-playground start",
      "test:base": "yarn workspace @kengine/webcomponents-base test",
      "test:main": "yarn workspace @kengine/webcomponents test",
      "test:main:suite-1": "yarn workspace @kengine/webcomponents test:suite-1",
      "test:main:suite-2": "yarn workspace @kengine/webcomponents test:suite-2",
      "test:fiori": "yarn workspace @kengine/webcomponents-fiori test",
      "test": "npm-run-all --sequential test:base test:main test:fiori",
      "lint": "wsrun --exclude-missing lint",
      "link-all": "wsrun link",
      "unlink-all": "wsrun unlink",
      "copy-css": "copy-and-watch \"packages/base/dist/css/**/*\" packages/main/test/pages/resources/css/base/ && copy-and-watch \"packages/theming/dist/css/**/*\" packages/main/test/pages/resources/css/theming/ && copy-and-watch \"packages/main/dist/css/**/*\" packages/main/test/pages/resources/css/main/ && copy-and-watch \"packages/base/dist/css/**/*\" packages/fiori/test/pages/resources/css/base/ && copy-and-watch \"packages/theming/dist/css/**/*\" packages/fiori/test/pages/resources/css/theming/ && copy-and-watch \"packages/fiori/dist/css/**/*\" packages/fiori/test/pages/resources/css/fiori/ && copy-and-watch \"packages/main/dist/css/**/*\" packages/fiori/test/pages/resources/css/main/",
      "release": "node ./.github/actions/release.js",
      "prepare": "husky install",
      "husky:commit-msg": "commitlint -e",
      "husky:lint": "yarn lint && yarn lint:scope",
      "husky:pre-push": "npm-run-all --sequential husky:commit-msg husky:lint"
    },
    "devDependencies": {
      "@commitlint/cli": "^18.0.0",
      "@commitlint/config-conventional": "^16.2.1",
      "@wdio/devtools-service": "^7.19.7",
      "command-line-args": "^5.1.1",
      "copy-and-watch": "^0.1.5",
      "globby": "^13.1.1",
      "husky": "^7.0.4",
      "lerna": "^6.4.1",
      "npm-run-all": "^4.1.3",
      "nps": "^5.10.0",
      "typescript": "^4.9.4",
      "wsrun": "^5.2.4",
      "yarnhook": "^0.6.0"
    },
    "workspaces": [
      "packages/theming",
      "packages/base",
      "packages/localization",
      "packages/main",
      "packages/fiori",
      "packages/icons",
      "packages/icons-business-suite",
      "packages/icons-tnt",
      "packages/tools",
      "packages/playground",
      "packages/create-package"
    ]
  }